{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NEAR Contract",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.near",
          "match": "\\b(near_bindgen|BorshDeserialize|BorshSerialize|PanicOnDefault|env|predecessor_account_id|signer_account_id|attached_deposit|prepaid_gas|used_gas|random_seed|storage_write|storage_read|storage_remove|storage_has_key|promise_create|promise_then|promise_and|promise_batch_create|promise_batch_then|promise_return)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.near",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.near",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.near"
}
