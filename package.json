{
  "name": "near-developer-suite",
  "displayName": "NEAR Developer Suite",
  "description": "Comprehensive developer tools for NEAR Protocol.",
  "version": "0.1.0",
  "publisher": "gemini-on-near",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mastrophot/near-developer-suite-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:nearDeveloperSuite.estimateGas",
    "onCommand:nearDeveloperSuite.deployContract"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "NEAR Developer Suite",
      "properties": {
        "nearDeveloperSuite.network": {
          "type": "string",
          "default": "testnet",
          "enum": [
            "mainnet",
            "testnet"
          ],
          "description": "Target NEAR network for gas checks and deploy command."
        },
        "nearDeveloperSuite.accountId": {
          "type": "string",
          "default": "",
          "description": "Default account id used in deploy command prompt."
        },
        "nearDeveloperSuite.nearCliCommand": {
          "type": "string",
          "default": "near",
          "description": "CLI command used to deploy (e.g. near, npx near-cli)."
        }
      }
    },
    "snippets": [
      { "language": "rust", "path": "./snippets/near-rust.json" },
      { "language": "javascript", "path": "./snippets/near-js.json" },
      { "language": "typescript", "path": "./snippets/near-js.json" }
    ],
    "commands": [
      {
        "command": "nearDeveloperSuite.estimateGas",
        "title": "NEAR: Estimate Gas for Transaction"
      },
      {
        "command": "nearDeveloperSuite.deployContract",
        "title": "NEAR: Deploy Compiled Contract"
      }
    ],
    "grammars": [
      {
        "language": "near-contract",
        "scopeName": "source.near",
        "path": "./syntaxes/near.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "near-api-js": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.5"
  }
}
